pipeline {
    agent any

    tools {
        dockerTool 'docker-latest'
    }

    environment {
        DOCKERHUB_USER = 'helbino' //must be lowercase?
        IMAGE_NAME = 'my-web-app'
        IMAGE_TAG = "v-${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Image') {
            steps {
                script {
                    // Use the absolute path to the binary we just installed
                    sh "/usr/bin/docker build -f my-lab/Dockerfile -t $DOCKERHUB_USER/$IMAGE_NAME:$IMAGE_TAG my-lab"
                }
            }
        }

        stage('Push Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        // Use the absolute path here too
                        sh "echo $PASS | /usr/bin/docker login -u $USER --password-stdin"
                        sh "/usr/bin/docker push $DOCKERHUB_USER/$IMAGE_NAME:$IMAGE_TAG"
                    }
                }
            }
        }
    }

}