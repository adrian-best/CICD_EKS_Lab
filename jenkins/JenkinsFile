pipeline {
    agent any

    tools {
        dockerTool 'docker-latest'
    }

    environment {
        DOCKERHUB_USER = 'helbino' //must be lowercase?
        IMAGE_NAME = 'my-web-app'
        IMAGE_TAG = "v-${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Image') {
            steps {
                script {
                    // Use the absolute path to the binary we just installed
                    sh "/usr/bin/docker build -f my-lab/Dockerfile -t $DOCKERHUB_USER/$IMAGE_NAME:$IMAGE_TAG my-lab"
                }
            }
        }

        stage('Push Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        // Use single quotes and the '--password' flag for better reliability
                        sh "/usr/bin/docker login -u '${USER}' -p '${PASS}'"
                        
                        sh "/usr/bin/docker push ${DOCKERHUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
                    }
                }
            }
        }
        stage('Update Manifest') {
                    steps {
                        script {
                            withCredentials([usernamePassword(credentialsId: 'jenkins-lab', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_TOKEN')]) {
                                // 1. Force switch to main branch so we aren't "detached"
                                sh "git checkout main"
                                
                                sh "git config user.email 'jenkins@example.com'"
                                sh "git config user.name 'Jenkins Bot'"

                                // 2. Update the image tag (Note the double quotes for Groovy variable expansion)
                                sh "sed -i 's|image: ${DOCKERHUB_USER}/${IMAGE_NAME}:.*|image: ${DOCKERHUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}|g' k8s/deployment.yaml"

                                // 3. Check if anything actually changed
                                def status = sh(script: "git status --porcelain", returnStatus: true)
                                
                                if (status == 0) {
                                    sh "git add k8s/deployment.yaml"
                                    sh "git commit -m 'Jenkins: update image to ${IMAGE_TAG}'"
                                    sh "git push https://${GIT_USER}:${GIT_TOKEN}@github.com/${GIT_USER}/CICD_LAB_EKS.git main"
                                } else {
                                    echo "No changes detected in deployment.yaml. Skipping push."
                                }
                            }
                        }
                    }
                }
    }

}